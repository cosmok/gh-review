# GitHub App credentials
APP_ID=your_app_id
WEBHOOK_SECRET=your_webhook_secret
PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYour private key here\n-----END RSA PRIVATE KEY-----"

# Google Cloud credentials
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=your-region  # e.g., us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_PROVIDER=google
GENAI_MODEL=gemini-2.5-flash-preview-05-20
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_MODEL=claude-3-sonnet-20240229
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.2
LLM_TOP_P=0.8
LLM_TOP_K=40
MAX_FILES_TO_PROCESS=20
MAX_DIFF_LENGTH=8000
MAX_DIFF_LINES=500
MAX_FILE_SIZE=100000
MAX_CONTEXT_LINES=200
REQUEST_TIMEOUT=30000
CONCURRENCY_LIMIT=3
PORT=3000
# Optional review options
ENABLE_ISSUE_COMMENT_EVENT=true
ENABLE_LABEL_EVENT=false
TRIGGER_LABEL=ai-review
REVIEW_COMMENT_KEYWORD=/review
SUMMARY_COMMENT_KEYWORD=/what
ENABLE_REPO_INSTRUCTIONS=false
INSTRUCTION_FILENAME=AI_REVIEW_INSTRUCTIONS.md
